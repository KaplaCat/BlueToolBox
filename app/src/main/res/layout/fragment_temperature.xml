<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.ela.deviceadvertisingmobile.view.sensors.TemperatureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/elaDarkBlueColor"
            android:textSize="32sp"
            android:text="Temperature" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/start_scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Start"
                    android:textAlignment="center"
                    android:textColor="@color/elaDarkBlueColor" />
            </LinearLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/stop_scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/stop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Stop"
                    android:textAlignment="center"
                    android:textColor="@color/elaDarkBlueColor" />
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Tag Tablelayout -->
                <ScrollView
                    android:id="@+id/scroll_tag_table"
                    android:layout_height="90dp"
                    android:layout_width="fill_parent">

                    <TableLayout
                        android:id="@+id/table_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:stretchColumns="0,1">
                    </TableLayout>
                </ScrollView>

                <!-- Scroll vie for first box and second box -->
                <ScrollView
                    android:id="@+id/detail_scroll"
                    android:layout_width="match_parent"
                    android:paddingTop="15dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                        <!-- First box for graph -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="380dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:background="@drawable/border">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
        >
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/temperature_blue"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tag_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/elaDarkBlueColor"
                                        android:textSize="32sp"
                                        android:text="Tag"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingBottom="5dp"
                                        android:gravity="center|end">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingEnd="10dp"
                                            android:textColor="@color/elaDarkBlueColor"
                                            android:textSize="20sp"
                                            android:text="Connect / Disconnect"/>
                                        <ImageButton
                                            android:id="@+id/connect_tag"

                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/connection"
                                            android:background="@null"
                                            android:scaleType="fitCenter"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/elaDarkBlueColor"/>

                            <TextView
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:id="@+id/temp_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/elaDarkBlueColor"
                                android:textSize="35sp"
                                android:text="XX.X Â°C"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/elaDarkBlueColor"/>

                            <com.jjoe64.graphview.GraphView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:id="@+id/graph" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view_limit"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:visibility="visible"/>

                        <!-- Second box for connection -->
                        <LinearLayout
                            android:id="@+id/connection_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:background="@drawable/border"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/blue_connect"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tag_connect_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/elaDarkBlueColor"
                                        android:textSize="32sp"
                                        android:text="Tag"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingBottom="5dp"
                                        android:gravity="center|end">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingEnd="10dp"
                                            android:textColor="@color/elaDarkBlueColor"
                                            android:textSize="20sp"
                                            android:text="Connect / Disconnect"/>
                                        <ImageButton
                                            android:id="@+id/tag_connect_disconnect"

                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/connection"
                                            android:background="@null"
                                            android:scaleType="fitCenter"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/elaDarkBlueColor"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:paddingTop="10dp"
                                    android:layout_weight="1"
                                    android:paddingBottom="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="25sp"
                                    android:text="State :"/>

                                <TextView
                                    android:id="@+id/state_connection"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="25sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:padding="10dp"
                                android:background="@color/elaDarkBlueColor"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="Send a LED On command :"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="15sp"/>
                                <ImageButton
                                    android:id="@+id/connect_send_led_on"
                                    android:layout_width="50dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:layout_height="50dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/btn_pressed_light_on"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="Send a LED Off command :"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="15sp"/>
                                <ImageButton
                                    android:id="@+id/connect_send_led_off"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:src="@drawable/btn_pressed_light_off"/>
                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:paddingTop="10dp"
                                android:background="@color/elaDarkBlueColor"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="Send a Buzz On command :"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="15sp"/>
                                <ImageButton
                                    android:id="@+id/connect_send_buzz_on"
                                    android:layout_width="50dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:layout_height="50dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/btn_pressed_buzz_on"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="Send a Buzz Off command :"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="15sp"/>
                                <ImageButton
                                    android:id="@+id/connect_send_buzz_off"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:src="@drawable/btn_pressed_buzz_off"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:paddingTop="10dp"
                                android:background="@color/elaDarkBlueColor"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:padding="10dp"
                                    android:layout_weight="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="Battery level (V) :"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:id="@+id/result_bat_voltage"
                                    android:padding="10dp"
                                    android:layout_weight="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="x.xx"
                                    android:textColor="@color/elaDarkBlueColor"
                                    android:textSize="15sp"/>
                                <ImageButton
                                    android:id="@+id/connect_send_bat_voltage"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:scaleType="fitCenter"
                                    android:layout_weight="3"
                                    android:background="@null"
                                    android:src="@drawable/btn_pressed_bat"/>
                            </LinearLayout>
                        </LinearLayout>



                <View
                    android:id="@+id/view_end"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

    </LinearLayout>


</FrameLayout>